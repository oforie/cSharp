@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to Quoting Dojo</h1>
<h4>Register to post a quote</h4>



<form action="/register" method="POST">
    Name: <input type="text" name="name" value="">
        <button type="submit">Register</button>
</form><br>

<div>
    @if(ViewBag.NameErrors != null)
    {
            foreach(var error in ViewBag.NameErrors)
            {
                //If there are any errors for a field...
                if(@error.Errors.Count > 0)
                {
                    // We show the first error for that field
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
        
    }
</div>


<a href="/viewQuotes">Skip to Quotes</a>

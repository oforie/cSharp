@{
    ViewData["Title"] = "Home Page";
}


@if(ViewBag.User != null || ViewBag.SessionUser != null)
{
    <h1>Add Quote!</h1>
    <form action="/addQuote" method="POST">
        Quote: <input type="text" name="message" value="">
            <button type="submit">Post Quote!</button>
    </form><br>
}

 @if(ViewBag.MessageErrors != null)
    {
        
            foreach(var error in ViewBag.MessageErrors)
            {
                //If there are any errors for a field...
                if(@error.Errors.Count > 0)
                {
                    // We show the first error for that field
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
        
    }



<h1>Check Out These Quotes!</h1>

<div>
        @foreach(var quote in ViewBag.Quotes)
        {
            <p>@quote["Content"]</p>
            <p>@quote["CreatedAt"]</p>
        }
</div>